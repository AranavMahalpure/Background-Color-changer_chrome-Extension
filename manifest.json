{
    "manifest_version": 3,
    "name": "Color Changer",
    "version": "1.0",
    "description": "Change the background color of the current webpage.",
    "permissions": ["scripting", "activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://*"],
        "js": ["content.js"]
      }
    ]
  }
  